# Maintainer: Simone De Gregori <orion@runeaudio.com>

pkgname=upmpdcli-rune
_pkgname=upmpdcli
pkgver=1.4.2pre
pkgrel=1
pkgdesc="an UPnP front-end to the Music Player Daemon"
url="http://www.lesbonscomptes.com/upmpdcli/"
license=('GPL2')
depends=('libupnpp-rune' 'libmpdclient' 'libmicrohttpd' 'jsoncpp' 'curl' 'expat')
builddepends=('autoconf')
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
source=("https://www.lesbonscomptes.com/upmpdcli/downloads/$_pkgname-$pkgver.tar.gz"
        "upmpdcli.conf"
        "runeaudio.png")
sha1sums=('SKIP'
          '8ae35924a0fd4de7424eb9a94560331bd4de47b9'
          '8cecfbf17d56aa342c9b0111fdae866713f7e067')
install=upmpdcli.install
build() {

  cd "$srcdir/$_pkgname-$pkgver"
# from Arch PKGFILE

  # this is temporary - should be fixed in the git repo
  chmod u+x autogen.sh

  msg "Run autogen.sh"
  ./autogen.sh

# end

  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  mkdir -p ${pkgdir}/etc/
  cp ${startdir}/upmpdcli.conf ${pkgdir}/etc/
  cp ${startdir}/runeaudio.png ${pkgdir}/usr/share/upmpdcli/icon.png
  install -Dm644  ${startdir}/upmpdcli.service ${pkgdir}/usr/lib/systemd/system/upmpdcli.service
  install -Dm644  ${startdir}/upmpdcli.sysusers "$pkgdir"/usr/lib/sysusers.d/upmpdcli.conf
}
