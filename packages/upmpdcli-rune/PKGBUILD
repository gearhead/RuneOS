pkgname=upmpdcli-rune
_pkgname=upmpdcli
pkgver=1.5.0
pkgrel=1
pkgdesc="an UPnP front-end to the Music Player Daemon"
url="http://www.lesbonscomptes.com/upmpdcli/"
license=('GPL2')
depends=('libupnpp' 'libmpdclient' 'libmicrohttpd' 'jsoncpp' 'curl' 'expat' 'python-requests')
builddepends=('autoconf')
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
source=("https://www.lesbonscomptes.com/upmpdcli/downloads/$_pkgname-$pkgver.tar.gz"
        "upmpdcli.service"
        "upmpdcli.conf-rune"
        "runeaudio.png"
        "streamproxy.patch")

sha256sums=('SKIP'
            '5f45e9439144ac2bd305ca3470baecd6d068c1185c5a90159bf744ddf9cf4506'
            '5440d159f42d04159d537de313d7df99c2aa40c18c28377b9d0453ca3c4e7e5e'
            'fe6495a42ca78309808aaa28c6d3353b14d51d20bef6f6ec3d5bc98ed46b6149'
            'e3b9dfc827d75e08a594ea890dba55d96cd7daa4badcc57773ca4422b9f69080')

install=upmpdcli.install
build() {
  cd "$srcdir/$_pkgname-$pkgver"
# from Arch PKGFILE

  # this is temporary - should be fixed in the git repo
#  chmod u+x autogen.sh

#  msg "Run autogen.sh"
#  ./autogen.sh

# end
# patching streamproxy
# needed to compile on armv6/7 with new microhttpd
#patch -Np1 -i ../streamproxy.patch

  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  mkdir -p ${pkgdir}/etc/
  install -Dm644  ${startdir}/upmpdcli.service ${pkgdir}/usr/lib/systemd/system/upmpdcli.service
  install -Dm644  ${startdir}/upmpdcli.sysusers "$pkgdir"/usr/lib/sysusers.d/upmpdcli.conf
  cp ${startdir}/upmpdcli.conf-rune ${pkgdir}/etc/upmpdcli.conf
  cp ${startdir}/runeaudio.png ${pkgdir}/usr/share/upmpdcli/icon.png
}
