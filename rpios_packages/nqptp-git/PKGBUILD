# Maintainer: gearhead <ys3al35l at gmail dot com>
# Contributor: Logan Sevcik <logan+aur@sevcik.email>

pkgname=nqptp-git
pkgver=1.2.5.dev.r18.gb8384c4
pkgrel=1
pkgdesc="A daemon that monitors timing data from PTP clocks"
arch=('arm64' 'armhf' 'amd64')
url="http://github.com/mikebrady/nqptp#readme"
license=('GPL2')
provides=(nqptp)
conflicts=(nqptp)
replaces=(nqptp)
backup=()
options=()
install=nqptp.install
source=("git+http://github.com/mikebrady/nqptp.git"
        nqptp.sysusers
        remove-useradd.patch)
noextract=()
md5sums=('SKIP'
         'SKIP'
         'SKIP')

_gitname="nqptp"

pkgver() {
    cd "$srcdir/$_gitname"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd nqptp
  patch -p1 < ../remove-useradd.patch
}

build() {
  cd "$srcdir/$_gitname"
  autoreconf -fi
  ./configure --prefix=/usr --with-systemd-startup
  make -j4
}

package() {
  cd "$srcdir/$_gitname"
  make -j4 DESTDIR="$pkgdir/" install
  install -D -m644 "$srcdir"/nqptp.sysusers "$pkgdir"/usr/lib/sysusers.d/nqptp.conf
}
