# Maintainer: gearhead <ys3al35l at gmail dot com>
# Contributor: Logan Sevcik <logan+aur@sevcik.email>

pkgname=nqptp-git
pkgver=1.cfa8315
pkgrel=1
pkgdesc="A daemon that monitors timing data from PTP clocks"
arch=('arm64' 'armhf')
url="https://github.com/mikebrady/nqptp#readme"
license=('GPL2')
provides=(nqptp)
conflicts=(nqptp)
replaces=(nqptp)
backup=()
options=()
source=("git+https://github.com/mikebrady/nqptp.git"
        nqptp.sysusers
        remove-useradd.patch)
noextract=()
md5sums=('SKIP'
         'SKIP'
         'SKIP')

_gitname="nqptp"

pkgver() {
	cd "$srcdir/$_gitname"
        printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}


prepare() {
  cd nqptp
  patch -p1 < ../remove-useradd.patch
}

build() {
  cd "$srcdir/$_gitname"
  autoreconf -fi
  ./configure --prefix=/usr --with-systemd-startup
  make -j4
}

package() {
  cd "$srcdir/$_gitname"
  make -j4 DESTDIR="$pkgdir/" install
  install -D -m644 "$srcdir"/nqptp.sysusers "$pkgdir"/usr/lib/sysusers.d/nqptp.conf
}
